{
  "name": "functions",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "./node_modules/.bin/tslint -p tslint.json",
    "build": "./node_modules/.bin/tsc",
    "serve": "yarn run build && firebase serve --host 0.0.0.0",
    "shell": "yarn run build && firebase experimental:functions:shell",
    "start": "yarn run shell",
    "deploy": "yarn install && yarn run build && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "face-recognition": "^0.9.4",
    "firebase-admin": "~6.0.0",
    "firebase-functions": "^2.1.0",
    "firebase-functions-helper": "^0.5.10",
    "jsonwebtoken": "^8.4.0",
    "opencv4nodejs": "^4.14.0",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "jsonwebtoken": "^8.4.0",
    "tslint": "~5.8.0",
    "typescript": "~2.8.3"
  },
  "private": true
}
